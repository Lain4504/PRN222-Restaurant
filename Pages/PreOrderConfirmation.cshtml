@page "/preorder-confirmation/{id:int}"
@model PRN222_Restaurant.Pages.PreOrderConfirmationModel
@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Order Confirmation</h1>
            <p class="text-gray-600 mt-2">Thank you for your order! Here are your order details.</p>
        </div>

        <div class="bg-white shadow-lg rounded-lg p-6 mb-6">
            <div class="grid grid-cols-2 gap-4 mb-6">
                <div>
                    <h3 class="text-sm font-medium text-gray-500">Order Number</h3>
                    <p class="mt-1 text-lg font-semibold text-gray-900">#@Model.Order.Id</p>
                </div>
                <div>
                    <h3 class="text-sm font-medium text-gray-500">Status</h3>
                    <p class="mt-1 text-lg font-semibold text-gray-900">@Model.Order.Status</p>
                </div>
                <div>
                    <h3 class="text-sm font-medium text-gray-500">Reservation Date</h3>
                    <p class="mt-1 text-lg font-semibold text-gray-900">@Model.Order.ReservationTime?.ToString("MMMM dd, yyyy")</p>
                </div>
                <div>
                    <h3 class="text-sm font-medium text-gray-500">Reservation Time</h3>
                    <p class="mt-1 text-lg font-semibold text-gray-900">@Model.Order.ReservationTime?.ToString("hh:mm tt")</p>
                </div>
                <div>
                    <h3 class="text-sm font-medium text-gray-500">Table Number</h3>
                    <p class="mt-1 text-lg font-semibold text-gray-900">@Model.Order.Table.TableNumber</p>
                </div>
                <div>
                    <h3 class="text-sm font-medium text-gray-500">Number of Guests</h3>
                    <p class="mt-1 text-lg font-semibold text-gray-900">@Model.Order.NumberOfGuests</p>
                </div>
            </div>

            <div class="border-t border-gray-200 pt-6">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Order Items</h3>
                <div class="space-y-4">
                    @foreach (var item in Model.Order.OrderItems)
                    {
                        <div class="flex justify-between items-center">
                            <div>
                                <h4 class="text-base font-medium text-gray-900">@item.MenuItem.Name</h4>
                                <p class="text-sm text-gray-500">Quantity: @item.Quantity</p>
                            </div>
                            <p class="text-base font-medium text-gray-900">$@(item.UnitPrice * item.Quantity)</p>
                        </div>
                    }
                </div>
                <div class="border-t border-gray-200 mt-6 pt-6">
                    <div class="flex justify-between items-center">
                        <h3 class="text-lg font-medium text-gray-900">Total</h3>
                        <p class="text-2xl font-bold text-gray-900">$@Model.Order.TotalPrice</p>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Order.Note))
            {
                <div class="mt-6">
                    <h3 class="text-sm font-medium text-gray-500">Special Instructions</h3>
                    <p class="mt-1 text-gray-900">@Model.Order.Note</p>
                </div>
            }
        </div>

        <div class="flex justify-center space-x-4">
            <form method="post" asp-page-handler="Cancel" asp-route-id="@Model.Order.Id">
                <button type="submit" class="btn btn-error">Cancel Order</button>
            </form>
            <a href="/" class="btn btn-primary">Return to Home</a>
        </div>
    </div>
</div> 