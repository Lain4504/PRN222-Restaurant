@page "/checkout"
@model PRN222_Restaurant.Pages.CheckoutModel
@{
    ViewData["Title"] = "Complete Your Payment";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-5xl mx-auto">
        <h1 class="text-3xl font-bold text-center mb-8">Complete Your Payment</h1>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Order Summary -->
            <div class="md:col-span-2">
                <div class="card bg-base-100 shadow-xl">
                    <div class="card-body">
                        <h2 class="card-title text-xl mb-4">Order Summary</h2>

                        <div class="overflow-x-auto">
                            <table class="table w-full">
                                <thead>
                                    <tr>
                                        <th>Item</th>
                                        <th class="text-right">Quantity</th>
                                        <th class="text-right">Price</th>
                                        <th class="text-right">Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.OrderItems != null)
                                    {
                                        foreach (var item in Model.OrderItems)
                                        {
                                            <tr>
                                                <td>@item.Name</td>
                                                <td class="text-right">@item.Quantity</td>
                                                <td class="text-right">$@item.Price.ToString("F2")</td>
                                                <td class="text-right">$@item.Subtotal.ToString("F2")</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="3" class="text-right font-bold">Subtotal:</td>
                                        <td class="text-right font-bold">$@Model.Subtotal.ToString("F2")</td>
                                    </tr>
                                    <tr>
                                        <td colspan="3" class="text-right">Tax (10%):</td>
                                        <td class="text-right">$@Model.Tax.ToString("F2")</td>
                                    </tr>
                                    <tr>
                                        <td colspan="3" class="text-right font-bold">Total:</td>
                                        <td class="text-right font-bold">$@Model.Total.ToString("F2")</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Payment Section -->
            <div class="md:col-span-1">
                <div class="card bg-base-100 shadow-xl">
                    <div class="card-body">
                        <h2 class="card-title text-xl mb-4">Payment</h2>

                        <form method="post">
                            <input type="hidden" asp-for="PaymentInfo.OrderId" value="@Model.OrderId" />
                            <input type="hidden" asp-for="PaymentInfo.Amount" value="@Model.Total" />
                            <input type="hidden" asp-for="PaymentInfo.OrderDescription" value="Payment for reservation #@Model.OrderId" />
                            <input type="hidden" asp-for="PaymentInfo.OrderType" value="PreOrder" />
                            <input type="hidden" asp-for="PaymentInfo.Name" value="@(User.Identity.IsAuthenticated? User.Identity.Name : "Guest")" />

                            <div class="form-control mt-6">
                                <button type="submit" class="btn btn-primary btn-lg w-full">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                                    </svg>
                                    Pay with VNPay
                                </button>
                            </div>
                        </form>

                        <div class="mt-8">
                            <h3 class="font-semibold mb-2">Payment Instructions</h3>
                            <ul class="list-disc pl-5 space-y-1 text-sm">
                                <li>You will be redirected to the VNPay payment gateway</li>
                                <li>Select your preferred payment method</li>
                                <li>Complete the payment process</li>
                                <li>You will be returned to our site after payment</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<section class="bg-white rounded-xl shadow-md p-6 max-w-2xl mx-auto mt-10">
    <h2 class="text-2xl font-bold text-gray-800 mb-4 text-center">Leave Your Feedback</h2>

    <form method="post" asp-page-handler="SubmitFeedback" class="space-y-5">
        <!-- Comment -->
        <div>
            <label asp-for="NewFeedback.Comment" class="block text-sm font-medium text-gray-700 mb-1">Your Comment</label>
            <textarea asp-for="NewFeedback.Comment" rows="4"
                      class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent resize-none"
                      placeholder="Write your feedback here..."></textarea>
            <span asp-validation-for="NewFeedback.Comment" class="text-red-500 text-sm"></span>
        </div>

        <!-- Rating -->
        <div>
            <label asp-for="NewFeedback.Rating" class="block text-sm font-medium text-gray-700 mb-1">Rating</label>
            <select asp-for="NewFeedback.Rating"
                    class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent">
                <option value="">-- Select Rating --</option>
                @for (int i = 1; i <= 5; i++)
                {
                    <option value="@i">@i Star@(i > 1 ? "s" : "")</option>
                }
            </select>
            <span asp-validation-for="NewFeedback.Rating" class="text-red-500 text-sm"></span>
        </div>

        <!-- Submit Button -->
        <div class="text-center mt-2    ">
            <button type="submit"
                    class="inline-block w-full sm:w-auto px-6 py-2 text-white bg-blue-600 hover:bg-blue-700 rounded-lg transition duration-200">
                Submit Feedback
            </button>
        </div>
    </form>

    <!-- Feedback Messages -->
    <div class="mt-6">
        @if (TempData["FeedbackSuccess"] != null)
        {
            <div class="p-4 bg-green-100 border border-green-300 text-green-800 rounded-lg text-sm text-center">
                @TempData["FeedbackSuccess"]
            </div>
        }
        @if (TempData["FeedbackError"] != null)
        {
            <div class="p-4 bg-red-100 border border-red-300 text-red-800 rounded-lg text-sm text-center">
                @TempData["FeedbackError"]
            </div>
        }
    </div>
</section>