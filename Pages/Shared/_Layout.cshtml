<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PRN222_Restaurant</title>
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <base href="~/" />
    <component type="typeof(Microsoft.AspNetCore.Components.Web.HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <header>
        <nav class="bg-gray-800">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex items-center justify-between h-16">
                    <div class="flex items-center">
                        <a href="/" class="text-white font-bold">PRN222_Restaurant</a>
                    </div>
                    <div class="flex">
                        <div class="border-r border-gray-600 pr-4 mr-4">
                            <span class="text-gray-400">Razor Pages:</span>
                            <a href="/" class="text-gray-300 hover:text-white px-3 py-2">Home</a>
                            <a href="/privacy" class="text-gray-300 hover:text-white px-3 py-2">Privacy</a>
                        </div>
                        <div>
                            <span class="text-gray-400">Blazor Pages:</span>
                            <a href="/blazor/counter" class="text-gray-300 hover:text-white px-3 py-2">Counter</a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mx-auto px-4 py-4">
        @RenderBody()
    </main>

    <footer class="border-t mt-8">
        <div class="container mx-auto px-4 py-4 text-center text-gray-600">
            &copy; 2024 - PRN222_Restaurant - <a href="/privacy" class="text-blue-600 hover:underline">Privacy</a>
        </div>
    </footer>

    <script src="_framework/blazor.server.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>