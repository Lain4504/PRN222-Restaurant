@page
@model PRN222_Restaurant.Pages.Admin.BalancePoints.IndexModel
@{
    ViewData["Title"] = "Balance Points Management";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-coins mr-2"></i>
                        Balance Points Management
                    </h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5>Total Balance Points: @Model.BalancePoints.Count()</h5>
                        </div>
                        <div class="col-md-6 text-right">
                            <button class="btn btn-info" onclick="location.reload()">
                                <i class="fas fa-sync-alt"></i> Refresh
                            </button>
                        </div>
                    </div>

                    @if (Model.BalancePoints.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>User</th>
                                        <th>Email</th>
                                        <th>Current Points</th>
                                        <th>User Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var balancePoint in Model.BalancePoints)
                                    {
                                        <tr>
                                            <td>@balancePoint.Id</td>
                                            <td>
                                                @if (balancePoint.User != null)
                                                {
                                                    <strong>@balancePoint.User.FullName</strong>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Unknown User</span>
                                                }
                                            </td>
                                            <td>
                                                @if (balancePoint.User != null)
                                                {
                                                    @balancePoint.User.Email
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge badge-@(balancePoint.Point > 0 ? "success" : "secondary") badge-lg">
                                                    @balancePoint.Point.ToString("C")
                                                </span>
                                            </td>
                                            <td>
                                                @if (balancePoint.User != null)
                                                {
                                                    <span class="badge badge-@(balancePoint.User.IsActive ? "success" : "danger")">
                                                        @(balancePoint.User.IsActive ? "Active" : "Inactive")
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">Unknown</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="/Admin/BalancePoints/Details/@balancePoint.Id" 
                                                       class="btn btn-sm btn-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="/Admin/BalancePoints/Edit/@balancePoint.Id" 
                                                       class="btn btn-sm btn-warning" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    @if (balancePoint.Point > 0)
                                                    {
                                                        <button type="button" class="btn btn-sm btn-danger" 
                                                                onclick="confirmReset(@balancePoint.Id, '@balancePoint.User?.FullName')" 
                                                                title="Reset to Zero">
                                                            <i class="fas fa-undo"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle fa-2x mb-2"></i>
                            <h5>No Balance Points Found</h5>
                            <p>There are currently no balance points in the system.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reset Confirmation Modal -->
<div class="modal fade" id="resetModal" tabindex="-1" role="dialog" aria-labelledby="resetModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="resetModalLabel">Confirm Reset</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to reset the balance points for <strong id="userName"></strong> to zero?</p>
                <p class="text-danger"><small>This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <form id="resetForm" method="post" style="display: inline;">
                    <input type="hidden" name="balancePointId" id="balancePointId" />
                    <button type="submit" class="btn btn-danger" asp-page-handler="Reset">
                        <i class="fas fa-undo"></i> Reset to Zero
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmReset(id, userName) {
            document.getElementById('balancePointId').value = id;
            document.getElementById('userName').textContent = userName || 'Unknown User';
            $('#resetModal').modal('show');
        }

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
