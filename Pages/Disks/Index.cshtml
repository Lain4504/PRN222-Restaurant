@page
@model PRN222_Restaurant.Pages.Disks.IndexModel
@{
    ViewData["Title"] = "Disks";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold">Disks (Razor Pages)</h2>
        <a href="/Disks/Create" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
            Create New Disk
        </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var disk in Model.Disks)
        {
            <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                <div class="p-6">
                    <div class="flex justify-between items-start">
                        <div>
                            <h3 class="text-xl font-semibold mb-2">@disk.Name</h3>
                            <p class="text-gray-600 mb-4">@disk.Description</p>
                            <p class="text-lg font-bold text-green-600 mb-2">$@disk.Price.ToString("F2")</p>
                            <p class="text-sm">
                                Status: 
                                <span class="@(disk.IsAvailable ? "text-green-500" : "text-red-500")">
                                    @(disk.IsAvailable ? "Available" : "Not Available")
                                </span>
                            </p>
                        </div>
                    </div>
                    <div class="mt-4 flex justify-end space-x-2">
                        <a href="/Disks/Edit/@disk.Id" 
                           class="text-blue-500 hover:text-blue-700">
                            Edit
                        </a>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@disk.Id" 
                              onsubmit="return confirm('Are you sure you want to delete this disk?');"
                              class="inline">
                            <button type="submit" class="text-red-500 hover:text-red-700">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 