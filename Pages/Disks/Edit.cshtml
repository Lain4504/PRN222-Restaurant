@page "{id:int}"
@model PRN222_Restaurant.Pages.Disks.EditModel
@{
    ViewData["Title"] = "Edit Disk";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <h2 class="text-2xl font-bold mb-6">Edit Disk</h2>

        <form method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <input type="hidden" asp-for="Disk.Id" />
            
            <div class="mb-4">
                <label asp-for="Disk.Name" class="block text-gray-700 text-sm font-bold mb-2">Name</label>
                <input asp-for="Disk.Name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Disk.Name" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Disk.Description" class="block text-gray-700 text-sm font-bold mb-2">Description</label>
                <textarea asp-for="Disk.Description" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" rows="3"></textarea>
                <span asp-validation-for="Disk.Description" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Disk.Price" class="block text-gray-700 text-sm font-bold mb-2">Price</label>
                <input asp-for="Disk.Price" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Disk.Price" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2">
                    <input asp-for="Disk.IsAvailable" type="checkbox" class="mr-2" />
                    Available
                </label>
                <span asp-validation-for="Disk.IsAvailable" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="flex items-center justify-between">
                <a href="/Disks" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Back to List
                </a>
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Save
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 